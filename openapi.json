{
  "openapi": "3.0.0",
  "info": {
    "title": "Quiz Backend API",
    "version": "0.0.1",
    "description": "API documentation for the Quiz Backend application."
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local Development Server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "SignupRequest": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "username": { "type": "string" },
          "name": { "type": "string" },
          "surname": { "type": "string" },
          "passwordHash": { "type": "string" }
        },
        "required": ["email", "username", "name", "surname", "passwordHash"]
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" },
          "passwordHash": { "type": "string" },
          "uniqueId": { "type": "string", "description": "Unique device identifier" }
        },
        "required": ["email", "passwordHash", "uniqueId"]
      },
      "RecoverRequest": {
        "type": "object",
        "properties": {
          "email": { "type": "string", "format": "email" }
        },
        "required": ["email"]
      },
      "VerifyRequest": {
        "type": "object",
        "properties": {
          "code": { "type": "string" }
        },
        "required": ["code"]
      },
      "ChangePasswordRequest": {
        "type": "object",
        "properties": {
          "oldHash": { "type": "string" },
          "newHash": { "type": "string" }
        },
        "required": ["oldHash", "newHash"]
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "token": { "type": "string" },
          "message": { "type": "string" }
        }
      },
      "UserStatusResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "email": { "type": "string", "format": "email" },
          "username": { "type": "string" },
          "isVerified": { "type": "boolean" },
          "mustChangePassword": { "type": "boolean" }
        },
        "required": ["id", "email", "username", "isVerified", "mustChangePassword"]
      },
      "PushTokenRequest": {
        "type": "object",
        "properties": {
          "pushToken": { "type": "string" }
        },
        "required": ["pushToken"]
      },
      "LocalizationDto": {
        "type": "object",
        "properties": {
          "locale": { "type": "string", "example": "en" },
          "text": { "type": "string" }
        },
        "required": ["locale", "text"]
      },
      "CreateAnswerDto": {
        "type": "object",
        "properties": {
          "localizations": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/LocalizationDto" }
          }
        },
        "required": ["localizations"]
      },
      "CreateQuestionDto": {
        "type": "object",
        "properties": {
          "localizations": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/LocalizationDto" }
          },
          "answers": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/CreateAnswerDto" }
          },
          "correctAnswersIndices": {
            "type": "array",
            "items": { "type": "integer" },
            "description": "Indices of the correct answers in the answers array"
          }
        },
        "required": ["localizations", "answers", "correctAnswersIndices"]
      },
      "CreateQuestionsRequest": {
        "type": "object",
        "properties": {
          "questions": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/CreateQuestionDto" }
          }
        },
        "required": ["questions"]
      },
      "AnswerResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "text": { "type": "string" },
          "isCorrect": { "type": "boolean" }
        },
        "required": ["id", "text", "isCorrect"]
      },
      "QuestionResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "text": { "type": "string" },
          "answers": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/AnswerResponse" }
          }
        },
        "required": ["id", "text", "answers"]
      }
    }
  },
  "paths": {
    "/auth/signup": {
      "post": {
        "summary": "Register a new user",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/SignupRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          },
          "409": {
            "description": "User already exists",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Authenticate user",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful login",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          }
        }
      }
    },
    "/auth/recover": {
      "post": {
        "summary": "Initiate password recovery",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/RecoverRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Recovery email sent",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          }
        }
      }
    },
    "/auth/verify": {
      "post": {
        "summary": "Verify email address",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/VerifyRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Email verified successfully",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          },
          "400": {
            "description": "Invalid verification code",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "summary": "Logout user",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Logged out successfully"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/auth/change-password": {
      "post": {
        "summary": "Change user password",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ChangePasswordRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password changed successfully"
          },
          "401": {
            "description": "Invalid password or user",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/AuthResponse" }
              }
            }
          }
        }
      }
    },
    "/auth/must-change-password": {
      "get": {
        "summary": "Check if password change is required",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Status returned",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "must_change_password": { "type": "boolean" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/auth/status": {
      "get": {
        "summary": "Get user status and profile",
        "tags": ["Auth"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "User status details",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/UserStatusResponse" }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/devices/push-token-status": {
      "get": {
        "summary": "Check push token status for the device",
        "tags": ["Devices"],
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Push token status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "has_push_token": { "type": "boolean" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/devices/push-token": {
      "post": {
        "summary": "Update device push token",
        "tags": ["Devices"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/PushTokenRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Push token updated"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/questions": {
      "post": {
        "summary": "Create new questions",
        "tags": ["Questions"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateQuestionsRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Questions created successfully"
          },
          "400": {
            "description": "Bad Request - Validation failed"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "summary": "List questions",
        "tags": ["Questions"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "locale",
            "in": "query",
            "description": "Locale for the questions",
            "schema": { "type": "string", "default": "en" }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "schema": { "type": "integer", "default": 1 }
          }
        ],
        "responses": {
          "200": {
            "description": "List of questions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/QuestionResponse" }
                }
              }
            }
          }
        }
      }
    }
  }
}
